<ul>
  <% @bookmarks.each do |bookmark| %>
    <li class="bookmark" id="bookmark-<%=bookmark.id%>"> 

      <a href="<%= bookmark.url %>" target="_blank">
        <%= bookmark.title %>
        
      </a>
<form action="/bookmarks/<%=bookmark.id%>" method="post">
<input type="hidden" name="_method" value="DELETE"/>
<input type="submit" value="Delete Bookmark">
</form>
      <form action="/bookmarks/<%=bookmark.id%>/edit" method="get">
        <input type="submit" value="Edit Bookmark">
      </form>
    </li>
  <% end %>
</ul><br>

<form action="/bookmarks" method="post">
<label for="url">Please enter title for bookmark</label> <br></br>
<input type="text" name="title"><br></br>
<label for="url">Please enter url for bookmark</label><br></br>
<input type="text" name="url">
<input type="submit" value="Add Bookmark">
</form>
<%= flash[:notice] %>